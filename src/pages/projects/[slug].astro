---
import { getCollection } from "astro:content";
import MainLayout from "../../Layouts/MainLayout.astro";

export async function getStaticPaths() {
  const projectEntries = await getCollection("projects");
  return projectEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: {
    slug: string;
    data: {
      title: string;
      description: string;
      img: string;
    };
    render: () => Promise<{ Content: any; headings: any[] }>;
  };
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<MainLayout
  title={`${entry.data.title} | César Coello`}
  optionUno='Inicio'
  urlUno='/'
  optionDos='Sobre mí'
  urlDos='/#about'
  optionTres='Proyectos'
  urlTres='/#projects'
>
  <section id='' class='bg-stone-900 p-8 mt-2 rounded-3xl max-w-screen-2xl'>
    <div
      class='rounded-3xl col-span-5 md:col-span-2 row-span-1 text-white md:flex md:justify-between md:items-center min-h-[50px]'
    >
      <h1 class='text-3xl md:text-5xl font-semibold mb-2'>
        {entry.data.title}
      </h1>
      <a
        href='/#projects'
        class='text-lg font-regular text-gray-400 mb-4 underline'>Regresar</a
      >
    </div>

    <article class='prose md:prose-md text-xs md:text-xl'>
      <Content />
      <!-- Renderiza el contenido del archivo .mdx -->
    </article>
  </section>
</MainLayout>

<style is:global>
  .prose h1 {
    @apply text-3xl font-bold text-white mb-4 mt-8;
  }
  .prose h2 {
    @apply text-2xl font-semibold text-white mb-4 mt-8;
  }
  .prose h3 {
    @apply text-xl font-semibold text-white mb-3 mt-6;
  }
  .prose p {
    @apply mb-4 text-white;
  }
  .prose ul {
    @apply list-disc list-inside mb-4 text-white;
  }
  .prose ol {
    @apply list-decimal list-inside mb-4 text-white;
  }
  .prose li {
    @apply mb-2 text-white;
  }
  .prose strong {
    @apply text-white;
  }
  .prose a {
    @apply text-white hover:text-gray-300 underline;
  }
  .prose code {
    @apply bg-white text-black px-1 py-0.5 rounded;
  }
  .prose pre {
    @apply bg-gray-800 p-4 rounded-lg overflow-x-auto;
  }
  .prose pre code {
    @apply bg-transparent text-white;
  }
  .prose blockquote {
    @apply border-l-4 border-gray-600 pl-4 italic text-white;
  }
  .prose table {
    @apply w-full border-collapse border border-gray-600 mb-4;
  }
  .prose th,
  .prose td {
    @apply border border-gray-600 p-2 text-white;
  }
  .prose th {
    @apply bg-gray-700 font-semibold;
  }
</style>
