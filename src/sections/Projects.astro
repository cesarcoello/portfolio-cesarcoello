---
import { getCollection } from "astro:content";
import ProjectCard from "../components/ProjectCard.astro";

interface Project {
  slug: string;
  data: {
    title: string;
    description: string;
    img: string;
  };
}
const projects: Project[] = await getCollection("projects");
---

<section id='projects' class='bg-stone-900 px-5 pb-8 mt-2 rounded-3xl'>
  <h1 class='text-5xl md:text-6xl font-semibold py-5 md:py-8 text-whites'>
    Proyectos
  </h1>

  <!-- Todos los proyectos -->
  <div class='grid grid-cols-2 gap-4'>
    {
      projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          img={project.data.img}
          href={`/projects/${project.slug}`}
        />
      ))
    }
  </div>
</section>
