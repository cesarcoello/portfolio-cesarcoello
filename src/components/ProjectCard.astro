---
export interface Props {
  title: string;
  description: string;
  img: string;
  href: string;
}

const { title, description, img, href } = Astro.props;
---

<div class='relative rounded-3xl col-span-5 md:col-span-1 bg-black shadow-md'>
  <!-- Imagen de fondo con opacidad -->
  <div
    class='absolute inset-0 bg-cover bg-center bg-opacity-50 rounded-3xl'
    style={`background-image: url(${img}); opacity: 0.4`}
  >
  </div>

  <!-- Contenido del proyecto -->
  <div class='relative p-5 text-white flex flex-col justify-between h-full'>
    <!-- Título y Descripción -->
    <div>
      <div>
        <h1 class='text-xl md:text-5xl font-semibold mb-2 text-shadow'>
          {title}
        </h1>
        <p class='text-md md:text-2xl mb-2 text-shadow'>
          {description}
        </p>
      </div>
    </div>

    <!-- Botón de flecha -->
    <div class='flex justify-end items-end'>
      <a href={href}>
        <button
          class='bg-white hover:bg-transparent text-stone-900 h-16 w-16 p-2 rounded-full flex justify-center items-center'
        >
          <svg
            class='hover:text-white hover:font-black'
            xmlns='http://www.w3.org/2000/svg'
            width='3em'
            height='3em'
            viewBox='0 0 24 24'
            transform='rotate(90)'
          >
            <path
              fill='currentColor'
              d='M17.6 18L8 8.4V17H6V5h12v2H9.4l9.6 9.6z'></path>
          </svg>
        </button>
      </a>
    </div>
  </div>
</div>
