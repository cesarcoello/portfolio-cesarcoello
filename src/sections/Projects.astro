---
import { getCollection } from "astro:content";
import ProjectCard from "../components/ProjectCard.astro";

interface Project {
  slug: string;
  data: {
    title: string;
    description: string;
    img: string;
  };
}
const projects: Project[] = await getCollection("projects");
---

<section
  id='projects'
  class='bg-stone-900 p-8 mt-2 rounded-3xl max-w-screen-2xl'
>
  <div
    class='rounded-3xl col-span-5 md:col-span-2 row-span-1 p-5 md:p-8 text-white md:flex md:justify-between md:items-center min-h-[50px]'
  >
    <h1 class='text-5xl md:text-6xl font-semibold mb-2'>Proyectos</h1>
  </div>

  <!-- Todos los proyectos -->
  <div class='grid grid-cols-2 gap-4'>
    {
      projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          img={project.data.img}
          href={`/projects/${project.slug}`}
        />
      ))
    }
  </div>
</section>
